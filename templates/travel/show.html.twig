{% extends 'base.html.twig' %}

{% block title %}Travel{% endblock %}

{% block body %}
    <h1>Travel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/')}}{{ travel.image1 }} " alt=""></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ travel.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ travel.category.name }}</td>
            </tr>
            <tr>
                <th>Accroche</th>
                <td>{{ travel.hook }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ travel.description }}</td>
            </tr>
            <tr>
                <th>Prix par personne</th>
                <td>{{ travel.price }}</td>
            </tr>
            <tr>
                <th>Prix pour deux personne</th>
                <td>{{ travel.price * 2 }} </td>
            </tr>
            <tr>
                <th>Prix pour quatres personne</th>
                <td>{{ travel.price * 4 }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ travel.duration }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/') }}{{ travel.image2 }}" alt=""></td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/') }}{{ travel.image3 }}" alt=""></td>
            </tr>
            <tr>
                <th>Tag</th>
                {% for tag in travel.tag %}
                    <td>{{ tag.name }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Pdf</th>
                <td><a href="{{ asset('pdf/') }}{{ travel.pdf }}">PDF téléchargeable</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('travel_index') }}">back to list</a>

    <a href="{{ path('travel_edit', {'id': travel.id}) }}">edit</a>

    {{ include('travel/_delete_form.html.twig') }}
{% endblock %}
